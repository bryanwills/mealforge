{
  "name": "mealforge-monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "prepare": "husky",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "ci": "turbo run typecheck lint test build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "3.5.3",
    "turbo": "2.5.2"
  },
  "packageManager": {
    "pnpm": "^10.0.0"
  },
  "engines": {
    "node": ">=18.8.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "next-auth": "^4.24.11"
  }
}
